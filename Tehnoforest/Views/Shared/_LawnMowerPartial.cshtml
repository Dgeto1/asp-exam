<head>
    <link rel="stylesheet" href="~/css/allProducts.css" asp-append-version="true" />
</head>
@model LawnMowerAllViewModel
<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Chainsaw Image">
        <div class="card-body text-left">
            <h6>Косачки</h6>
            <h4>@Model.Model</h4>
            <h6>Максимална работна площ: <b>@Model.WorkingAreaCapacity m²</b></h6>
            <h6>Задвижваща система: <b>@Model.DriveSystem %</b> </h6>
            <h6>
                Цена:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <br />
            <a asp-controller="LawnMower" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Детайли</a>
            <a class="btn btn-success text-white"
               asp-controller="Orders"
               asp-action="AddItemToShoppingCart"
               asp-route-id="@Model.Id">
                <i class="bi bi-cart-plus"></i> Добави в количката)
            </a>
        </div>
    </div>
</div>
