@model ChainsawFormModel
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Model...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power"></label>
                <input asp-for="Power" class="form-control"
                       placeholder="Power...">
                <span asp-validation-for="Power" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CylinderDisplacement"></label>
                <input asp-for="CylinderDisplacement" class="form-control"
                       placeholder="Cylinder Displacement...">
                <span asp-validation-for="CylinderDisplacement" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BarLength"></label>
                <input asp-for="BarLength" class="form-control"
                       placeholder="Bar Length...">
                <span asp-validation-for="BarLength" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
<textarea asp-for="Description" rows="4" class="form-control"
          placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-
danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your
fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-
danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-
danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>